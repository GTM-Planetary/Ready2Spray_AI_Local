# Ready2Spray Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database
# Alternative: Use individual components
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ready2spray
# DB_USER=postgres
# DB_PASSWORD=your-password

# ===========================================
# SERVER
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-jwt-secret-minimum-32-characters-long-for-security

# Owner bypass (grants full access without subscription)
OWNER_EMAIL=your-email@example.com
OWNER_NAME=Your Name
OWNER_OPEN_ID=your-oauth-open-id

# OAuth Portal (external authentication)
OAUTH_SERVER_URL=https://your-oauth-server.com
VITE_OAUTH_PORTAL_URL=https://your-oauth-portal.com
VITE_APP_ID=ready2spray

# Dev Auth (for local testing only)
VITE_DEV_AUTH=true

# ===========================================
# AI SERVICES
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key
# OPENAI_API_KEY=sk-your-openai-key (optional, for backup)

# ===========================================
# STRIPE (Billing)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ===========================================
# EMAIL (Mailgun)
# ===========================================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# FILE STORAGE (AWS S3)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-west-1
AWS_S3_BUCKET=your-s3-bucket-name

# ===========================================
# APP CONFIGURATION
# ===========================================
VITE_APP_TITLE=Ready2Spray - Aerial Application Platform
VITE_APP_LOGO=/ready2spray-logo.png

# ===========================================
# ERROR TRACKING (Sentry)
# ===========================================
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/project-id

# ===========================================
# BETA ACCESS
# ===========================================
INVITATION_CODE=BETA2024

# ===========================================
# OLLAMA CONFIGURATION
# ===========================================
# LLM Provider: "ollama", "anthropic", or "forge"
LLM_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
